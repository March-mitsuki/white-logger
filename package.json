{
  "name": "zerologger",
  "version": "0.1.0",
  "description": "a very simple browser and node logger with only one dependency",
  "main": "./lib/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "./lib"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "jest",
    "fmt": "prettier --write ./src/**/*",
    "lint": "eslint ./src/**/*",
    "build": "rm -rf ./lib && npm run build:cjs & npm run build:esm",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/March-mitsuki/zerologger.git"
  },
  "keywords": [
    "logger",
    "browser",
    "node"
  ],
  "author": "mitsuki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/March-mitsuki/zerologger/issues"
  },
  "homepage": "https://github.com/March-mitsuki/zerologger#readme",
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@types/jest": "^29.2.4",
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "luxon": "^3.1.1"
  }
}
