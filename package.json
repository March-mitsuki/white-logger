{
  "name": "white-logger",
  "version": "0.1.2",
  "description": "a very simple browser and node logger with only one dependency",
  "main": "lib/node/index.js",
  "module": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "files": [
    "browser",
    "node",
    "utils",
    "esm"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test:browser": "vite",
    "test:node": "ts-node -r tsconfig-paths/register ./__test__/node/test.ts",
    "test:server": "ts-node-dev --respawn --exit-child -- ./__test__/server/test.ts",
    "fmt": "prettier --write ./src/**/*",
    "lint": "eslint ./src/**/*",
    "cleanup": "rm -rf ./browser & rm -rf ./node & rm -rf ./utils & rm -rf ./cjs & rm -rf ./esm",
    "build": "npm run cleanup && npm run build:cjs & npm run build:esm",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/March-mitsuki/white-logger.git"
  },
  "keywords": [
    "logger",
    "browser",
    "node",
    "esm",
    "typescript",
    "javascript"
  ],
  "author": "mitsuki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/March-mitsuki/white-logger/issues"
  },
  "homepage": "https://github.com/March-mitsuki/white-logger#readme",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "cors": "^2.8.5",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.2",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.1"
  },
  "dependencies": {
    "luxon": "^3.1.1"
  }
}
