{
  "name": "zerologger",
  "version": "0.1.0",
  "description": "a very simple browser and node logger with only one dependency",
  "main": "lib/node/index.js",
  "module": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test:browser": "vite",
    "test:node": "ts-node -r tsconfig-paths/register ./__test__/node/test.ts",
    "fmt": "prettier --write ./src/**/*",
    "lint": "eslint ./src/**/*",
    "build": "rm -rf ./lib && npm run build:cjs & npm run build:esm",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/March-mitsuki/zerologger.git"
  },
  "keywords": [
    "logger",
    "browser",
    "node"
  ],
  "author": "mitsuki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/March-mitsuki/zerologger/issues"
  },
  "homepage": "https://github.com/March-mitsuki/zerologger#readme",
  "devDependencies": {
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.1"
  },
  "dependencies": {
    "luxon": "^3.1.1"
  }
}
