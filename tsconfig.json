{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "outDir": "./lib",
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./jest.config.ts", "./test/**/*"],
  "exclude": ["**/node_modules/**"]
}
